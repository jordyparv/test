BEGIN
   
   INSERT INTO DIRECTIVE_GROUP (GROUP_ID, GROUP_NAME) 
   VALUES((select MAX(GROUP_ID) + 1 from DIRECTIVE_GROUP), :GROUP_NAME);

   
   INSERT INTO DIRECTIVE_USER_GROUP_MAPPING (MAPPING_ID, USER_ID,GROUP_ID) 
   VALUES((select MAX(MAPPING_ID) + 1 from DIRECTIVE_USER_GROUP_MAPPING), 
   :USER_ID,
   (select GROUP_ID from DIRECTIVE_GROUP WHERE GROUP_NAME =:GROUP_NAME));
   
   INSERT INTO DIRECTIVE_ELEMENT_GROUP_MAPPING (ELEMENT_MAPPING_ID, GROUP_ID,ELEMENT_ID)
    VALUES((select MAX(ELEMENT_MAPPING_ID) + 1 from DIRECTIVE_ELEMENT_GROUP_MAPPING), 
   (select GROUP_ID from DIRECTIVE_GROUP WHERE GROUP_NAME =:GROUP_NAME),
  :ELEMENT_ID);
END;
