  const existingGroup = await queryRunner.manager
      .createQueryBuilder()
      .select('g.GROUP_ID')
      .from('DirectiveGroup', 'g')
      .where('g.GROUP_NAME = :groupName', { groupName: createSwitchDirectiveDto.group_name })
      .getOne();

    if (existingGroup) {
      throw new HttpException(
        { message: 'Group name already exists' },
        HttpStatus.BAD_REQUEST,
      );
    }
