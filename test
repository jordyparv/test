MERGE INTO target_table t
USING (
    SELECT 
        SOURCE_TYPE,
        SOURCE_ID,
        VENDOR_ID,
        PM_CATEGORY,
        META_UNIVERSAL_ID,
        META_CREATED_DATE,
        META_CREATED_BY,
        META_LAST_UPDATED_DATE,
        META_LAST_UPDATED_BY
    FROM 
        source_table
) s
ON (t.META_UNIVERSAL_ID = s.META_UNIVERSAL_ID)
WHEN MATCHED THEN
    UPDATE SET
        t.SOURCE_TYPE = s.SOURCE_TYPE,
        t.SOURCE_ID = s.SOURCE_ID,
        t.VENDOR_ID = s.VENDOR_ID,
        t.PM_CATEGORY = s.PM_CATEGORY,
        t.META_CREATED_DATE = s.META_CREATED_DATE,
        t.META_CREATED_BY = s.META_CREATED_BY,
        t.META_LAST_UPDATED_DATE = s.META_LAST_UPDATED_DATE,
        t.META_LAST_UPDATED_BY = s.META_LAST_UPDATED_BY
WHEN NOT MATCHED THEN
    INSERT (
        SOURCE_TYPE,
        SOURCE_ID,
        VENDOR_ID,
        PM_CATEGORY,
        META_UNIVERSAL_ID,
        META_CREATED_DATE,
        META_CREATED_BY,
        META_LAST_UPDATED_DATE,
        META_LAST_UPDATED_BY
    ) VALUES (
        s.SOURCE_TYPE,
        s.SOURCE_ID,
        s.VENDOR_ID,
        s.PM_CATEGORY,
        s.META_UNIVERSAL_ID,
        s.META_CREATED_DATE,
        s.META_CREATED_BY,
        s.META_LAST_UPDATED_DATE,
        s.META_LAST_UPDATED_BY
    );
