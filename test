 select sc.contact_id as "id",sc.phone as "phone",sc.email as "email",sc.title as "title",
    alt_phone as "alt_phone",sc.login_id as "user_id",
    sc.lastname ||', '|| sc.firstname as "user_name", sc.role as "role"
    from sec_contact sc 
    inner join sec_users su on su.login_id = sc.login_id and su.status = 'A'
    where lower(trim(sc.lastname||', '||sc.firstname)) like '%'|| lower(:name) ||'%' and 
    lower(sc.role) in (lower(:role));
