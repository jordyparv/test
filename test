CREATE TABLE ATTACHED_FILES (
    ATTACHED_FILE_ID           NUMBER GENERATED BY DEFAULT AS IDENTITY,
    SOURCE_UNIVERSALID         VARCHAR2(255),
    IS_SECURE                  NUMBER(1),
    FILE_NAME                  VARCHAR2(255),
    FILE_PATH                  VARCHAR2(1024),
    FILE_PATH_FULL             VARCHAR2(1024),
    FILE_SIZE                  NUMBER,
    FILE_MODIFIED_DATE         TIMESTAMP,
    META_UNIVERSAL_ID          CHAR(36),
    META_CREATED_DATE          TIMESTAMP,
    META_CREATED_BY            VARCHAR2(255),
    META_LAST_UPDATE_DATE      TIMESTAMP,
    META_LAST_UPDATE_BY        VARCHAR2(255),
    SEC_READ                   NUMBER,
    SEC_UPDATE                 NUMBER,
    SEC_DELETE                 NUMBER,
    SEC_EXCLUDE                NUMBER,
    CATEGORY                   VARCHAR2(255),
    DESCRIPTION                VARCHAR2(4000),
    SEC_ALLOWONLY              NUMBER,
    SOURCE_CLASS               VARCHAR2(255),
    SOURCE_TABLE               VARCHAR2(255),
    IS_DRAFT                   NUMBER(1),
    PRIMARY_CATEGORY           NVARCHAR2(255),
    BASE64_DATA                CLOB,  -- Use CLOB for large Base64 data
    CONSTRAINT PK_ATTACHED_FILES PRIMARY KEY (ATTACHED_FILE_ID)
);
