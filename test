new ValidationPipe({
      whitelist: true, // Strip properties that are not in the DTO
      forbidNonWhitelisted: true, // Reject requests with properties not in the DTO
      transform: true, // Transform payloads to DTO types (like arrays, etc.)
      skipMissingProperties: false, // Ensure missing properties trigger validation error
    })

