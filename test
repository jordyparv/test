  DECLARE
        v_group_id NUMBER;  -- Variable to hold the returned GROUP_ID
    BEGIN
        -- Insert into the table and return the generated GROUP_ID
        INSERT INTO DIRECTIVE_GROUP (GROUP_ID, GROUP_NAME)
        VALUES (DIRECTIVE_GROUP_SEQ.NEXTVAL, :GROUP_NAME)
        RETURNING GROUP_ID INTO v_group_id;

        -- Returning the generated GROUP_ID as an OUT parameter
        :GROUP_ID_OUT := v_group_id;
    END;
